<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Chi" >


    <EditText
        android:maxLength="18"
        android:drawableRight="@drawable/icon_vnd_v"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:gravity="center"
        android:id="@+id/etSoTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_green"
        android:hint="Số tiền chi"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnMucChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_radius_1"
        android:drawableRight="@drawable/ickeyboard"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Mục chi"
        android:textSize="16sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_radius_2"
        android:drawableRight="@drawable/ickeyboard"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Mô tả"
        android:textSize="16sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_radius_1"
        android:drawableRight="@drawable/ickeyboard"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Tài khoản chi"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/rgRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbDaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đã chi" />

        <RadioButton
            android:id="@+id/rbChuaChi"
            android:checked="true"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chưa chi" />
    </RadioGroup>

    <Button
        android:enabled="false"
        android:textAllCaps="false"
        android:id="@+id/btnThoiGian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_radius_2"
        android:drawableRight="@drawable/ickeyboard"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="Thời gian"
        android:textSize="16sp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnLuuKhoanChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_green1"
        android:drawableLeft="@drawable/ic_save_white_24dp"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="110dp"
        android:paddingRight="110dp"
        android:text="Lưu"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
    </ScrollView>