<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_place"
        android:name="assignment2.poly.eduvn.assignment2.ActivityFThuChi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llLayout" />

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnBackThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:text="Thu"
            android:textAllCaps="false" />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btnForwardChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_green"
            android:drawableRight="@drawable/ic_arrow_forward_black_18dp"
            android:text="Chi"
            android:textAllCaps="false" />
    </RelativeLayout>

</RelativeLayout>