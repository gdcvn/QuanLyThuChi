<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/list_item_bg" >

    <ImageView
        android:contentDescription="anhTaiKhoan"
        android:id="@+id/ivAnh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:src="@drawable/money" />

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivAnh"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTenTaiKhoan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="Tài khoản của vợ" />

        <TextView
            android:id="@+id/tvSoTien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:text="Còn : 6,551,000 đ"
            android:textColor="#a3a3a3"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvId"
            android:text="cvcvcvcvcvcvcvcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <ImageButton
            android:onClick="myClickHandler"
            android:id="@+id/ibSuaXoa"
            android:layout_marginRight="15dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_content_cut_black_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>